#include "stdafx.h"
#include <iostream>
#include "stdlib.h"
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	int S = 0;
	int N;
	int i;
	do
	{
	cout<<"Ingrese el valor de N: ";
	cin>>N;
	}while(N<0);


	for (i=1;i<=N;i=i+4)
	
		S = S + i; 
	
	cout<<"\n\n";
	cout<<"LA SUMATORIA ES: " <<S;

	cout<<"\n\n";
	getch();
}
